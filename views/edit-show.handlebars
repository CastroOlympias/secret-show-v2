<form class="edit-show">
    <article>
        {{!-- I've left the same id to allow for styling --}}
        <div id="create">
            <p>Edit Your Show</p>
            <input type="text" id="band-name" placeholder="Band Name">
            <select id="genres" placeholder="Select your genre">
                <option>Select your Genre</option>
                <option value="Rock">Rock</option>
                <option value="Bluegrass">Bluegrass</option>
                <option value="Country">Country</option>
                <option value="RnB">R & B</option>
                <option value="HipHop">Hip Hop</option>
                <option value="EDM">EDM</option>
                <option value="Metal">Metal</option>
            </select>
            <input type="text" id="image-url" placeholder="Band Image">
            <input type="text" id="youtube" placeholder="Youtube Link">
            <input type="text" id="location" placeholder="Show Address">
            <input type="text" id="time" placeholder="Show Time">
            <input type="text" id="show-date" placeholder="Show Date">
            <select id="privacy" placeholder="Public or Private?">
                <option>Public or Private?</option>
                <option value="Public">Public</option>
                <option value="Private">Private</option>
            </select>
        </div>

        {{!-- "login-join-btn" is the styling of all of our buttons --}}
        <button type="submit" class="login-join-btn" id="submit-edit-show-btn">Submit Changes</button>
        <button type="submit" class="login-join-btn" id="delete-show-btn">Delete Show</button>
    </article>
</form>

<script src="/js/edit-show.js"></script>
<script src="/js/delete-show.js"></script>